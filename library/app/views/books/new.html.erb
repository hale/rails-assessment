<h3>Add a new book</h3>
<%= form_for @book do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :author %>
    <%= f.text_field :author %>
    
    <%= f.label :year %>
    <%= f.number_field :year %>

    <%= f.label :description%>
    <%= f.text_area :description%>

    <%= f.submit "Create Book" %>
<% end %>
