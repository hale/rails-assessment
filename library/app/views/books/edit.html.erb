<html>

<head>

<title>Edit Book</title>

</head>

<body>

<h1>Edit Book</h1>

<form action="../update/<%= @book.id %>" method="POST"">

<input id="book" name="book[id]" size="30"

type="hidden" value="<%= @book.id %>" />

<p><b>Title</b><br>

<input id="book" name="book[title]" size="30"

type="text" value="<%= @book.title %>" />

</p>

<p>
<b>Year</b><br>
<input id="year" name="book[title]" size="30" type="text" value="<%= @book.year %>" />

</p>

<p><b>Description</b><br>

<input id="book" name="book[description]"

size="30" type="text"

value="<%= @book.description %>" />

</p>

<p><b>Category:</b><br>

<select name="book[category_id]">

<% @categories.each do |category| %>

<option value="<%= category.id %>"

<%= ' selected' if category.id == @book.category_id %>>

<%= category.name %>

</option>

<% end %>

</select></p>

<p><b>Description</b><br>

<textarea cols="40" id="book"

name="book[Description]"

rows="20" wrap="virtual">

<%= @book.description%>


</textarea> </p>

<input type="submit" value="Update" />

</form>

<a href="/books/<%= @book.id %>">

Show

</a> |

<a href="/books/">

Back

</a>

</body>

</html>

